{
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"lib": [
			"dom",
			"es5",
			"es2015.promise",
			"es2015.iterable",
			"es2015.symbol",
			"es2015.symbol.wellknown", 
			"es2016",
			"es2017",
			"es2018",
			"esnext"],
		"module": "CommonJS",
		"moduleResolution": "node",
		"esModuleInterop": true,
		"noUnusedLocals": true,
		"outDir": "build/",
		"removeComments": false,
		"importHelpers": true,
		"downlevelIteration": true,
		"sourceMap": true,
		"strict": true,
		"target": "es5"
	},
	"include": [
		"./src/**/*.ts"
	],
  "exclude": [
    "./src/**/*.test.*"
  ]
}
